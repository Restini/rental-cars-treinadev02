<h1>Novo Modelo de Carro</h1>
<%= form_for @car_model do |f| %>
  <p>
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :motorization, 'Motorização' %>
    <%= f.text_field :motorization %>
  </p>
  <p>
    <%= f.label :year, 'Ano' %>
    <%= f.number_field :year %>
  </p>
  <p>
    <%= f.label :fuel_type, 'Combustível' %>
    <%= f.text_field :fuel_type %>
  </p>
  <div>
    <%= f.label :manufacturer_id, 'Fabricante' %>
    <%= f.collection_select(:manufacturer_id, @manufacturers, :id, :name)  %>
  </div>
  <p><%= f.submit 'Enviar' %></p>
<% end %>

<p><%= link_to 'Voltar', car_models_path %></p>